<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Title_text_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">72dp</item>
        <item name="android:paddingRight">72dp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:background">@color/white_color</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="expandable_list_group_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">72dp</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="expandable_list_child_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="about_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Buttons_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:checked">false</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:text"></item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="list_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="check_box_style">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:button">@drawable/custom_checkbox</item>
    </style>

    <style name="dot_style">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:button">@drawable/custom_checkbox</item>
    </style>



</resources>
